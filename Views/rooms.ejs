<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rooms</title>
    <link rel="stylesheet" href="/CSS/dashboard.css">
    <link rel="stylesheet" href="/CSS/rooms.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:300,600" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/jquery.selectric/1.10.1/selectric.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">


</head>

<body>
    <%- include("./Partials/dashPartial.ejs")%>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 my-3">
            <div class="title-strap">
                <h2>Basma's Rooms</h2>
            </div>
            <div class="container">
                <div class="row justify-content-end mb-3">
                    <div class="col-auto">
                        <button class="btn btn-success"
                            onclick="addRoomRow(`<%= JSON.stringify(characteristics) %>`)">Add Room</button>

                    </div>
                    <div class="col-auto" id="saveButtonContainer" style="display: none;">
                        <button id="saveButton" class="btn btn-primary" onclick="saveRoomRow()">Save</button>
                    </div>

                </div>
                <div class="table-responsive">
                    <table class="rooms-table" id="roomTable">
                        <thead>
                            <tr>
                                <th>Title </th>
                                <th>Quantity</th>
                                <th>Starting Price</th>
                                <th>Capacity</th>
                                <th>Description</th>
                                <th>Executive</th>
                                <th>Charecteristics</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i=0; i < rooms.length; i++) { %>
                                <tr>
                                    <td><input type="text" class="form-control" value="<%= rooms[i].title %>" readonly>
                                    </td>
                                    <td><input type="text" class="form-control" value="<%= rooms[i].quantity %>"
                                            readonly></td>
                                    <td><input type="text" class="form-control" value="<%= rooms[i].startingPrice %>"
                                            readonly></td>
                                    <td><input type="text" class="form-control" value="<%= rooms[i].capacity %>"
                                            readonly></td>
                                    <td><input type="text" class="form-control" value="<%= rooms[i].description %>"
                                            readonly></td>

                                    <td style=" text-align: center;">
                                        <% if (rooms[i].executive=="1" ) { %>
                                            <i class="fas fa-check-circle" style="color: green; font-size: large;"></i>
                                            <% } else { %>
                                                <i class="fas fa-times-circle"
                                                    style="color: red; font-size: large;"></i>
                                                <% } %>
                                    </td>
                                    <td>
                                        <div class="dropdown-container">
                                            <select class="form-control dropdown-content" multiple>
                                                <% for (let j=0; j < rooms[i].characteristics.length; j++) { %>
                                                    <option value="<%= rooms[i].characteristics[j].characteristic %>">
                                                        <%= rooms[i].characteristics[j].characteristic %>
                                                    </option>

                                                    <% } %>
                                            </select>
                                        </div>
                                    </td>

                                    <td>
                                        <div class="btn-group" role="group">
                                            <button class="btn btn-primary btn-edit" style="margin-right: 10px;"
                                                onclick="toggleReadOnly(this)">Edit</button>

                                            <button class="btn btn-danger" onclick="deleteRoomRow(this)">Delete</button>
                                        </div>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                    <div id="errorMessage" style="color: red;"></div>
                </div>
            </div>
        </main>
        </div>
        </div>
        <script src="/JS/rooms.js"></script>
</body>

</html>