</head>

<!-- Navbar -->

<body>

  <nav class="navbar navbar-expand-lg fixed-top bg-light navbar-light">
    <div class="container">
      <a class="navbar-brand" href="/"><span class="mb-3">Basma Hotel Aswan</span><img id="MDB-logo"
          src="/IMAGES/download-removebg-preview.png" alt="Basma Hotel Logo" draggable="false" height="50" /></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto align-items-center">
          <li class="nav-item">
            <a class="nav-link mx-2" href="/room"><i class="fa-solid fa-hotel pe-2"></i>Rooms</a>
          </li>
          <li class="nav-item">
            <a class="nav-link mx-2" href="/facilities"><i class="fas fa-utensils pe-2"></i>Facilities</a>
          </li>
          <li class="nav-item">
            <a class="nav-link mx-2" href="/aboutus"><i class="fas fa-circle-info pe-2"></i>About Us</a>
          </li>
          <% if (user==""){ %>   
          <li class="nav-item ms-3">
            <a id="in" class="btn btn-dark rounded-pill" href="/guest/login">Sign in</a>
          </li>
          <li class="nav-item ms-3">
            <a id="up" class="btn rounded-pill" href="/guest/signup">Sign up</a>
          </li>
          <% } else { %>
            <li class="nav-item ms-3">
              <a id="in" class="btn btn-dark rounded-pill" href="/guest">My Profile</a>
            </li>
            <li class="nav-item ms-3">
              <a id="up" class="btn rounded-pill" href="/guest/logout">Log Out</a>
            </li>
            <% } %>
        </ul>
      </div>
    </div>
  </nav>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/JS/toggle.js"></script>
  <!-- Navbar -->
  <%-body%>
    <!-- Footer -->
    <footer class="bg-dark text-white">
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-lg-4">
            <div class="contact-form">
              <h3>Got a question?</h3>
              <hr class="bg-light">
              <p>Get an answer here from our team</p>
              <form method="post" action="/askQuestion">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control" required>
                <label for="message">Message</label>
                <textarea id="message" name="message" class="form-control" required></textarea>
                <button type="submit" class="btn btn-light mt-3">Contact Basma</button>
              </form>
            </div>
          </div>
          <div class="col-md-6 col-lg-4">
            <div class="contact-details">
              <h3>What we believe in</h3>
              <hr class="bg-light">
              <p style="font-weight: 600;">Our Definition of Hospitality</p>
              <p>Hospitality exists when you believe that we are on your side to make sure you have a great time. We
                will do everything we can to make sure you are happy and comfortable.</p>
              <p>In front of the Nubian Museum, 1 Al Fanadek St., Aswan, Egypt</p>
              <hr class="bg-light">
              <p>+20(97)-248-4001</p>
              <a href="mailto:reservations@basmahotel.com">Reservations@basmahotel.com</a>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="accept">
              <p>We Proudly Accept</p>
              <img src="/IMAGES/payment (1).png" alt="Master card & visa" class="img-fluid">
              <img src="/IMAGES/logo-01-1-1-removebg-preview.png" alt="miza" class="img-fluid">
            </div>
          </div>
        </div>
        <hr class="bg-light">
        <p class="text-center">Basma Hotel Â© 2023 All Rights Reserved</p>
      </div>
    </footer>

    <!-- Include Bootstrap JS and Popper.js (if needed) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>

</html>
